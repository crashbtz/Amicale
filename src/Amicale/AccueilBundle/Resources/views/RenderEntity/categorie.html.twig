<div class="span9">
    <table class="table table-striped paginated text-center">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Modifier / Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in entities %}
                <tr>
                    <td>{{ categorie.titre }}</td>
                    <td>{{ categorie.description }}</td>
                    <td>                        
                        <a class="edit" data-url="{{ path('amicale_administration_edit', {'entity' : entity, 'id': categorie.id}) }}" href="#">
                            <img src="{{ asset('bundles/amicaleaccueil/images/modifier.png') }}" alt="modifier" />
                        </a>
                        &nbsp;/&nbsp;
                        <a class="delete" data-url="{{ path('amicale_administration_delete', {'entity' : entity, 'id': categorie.id}) }}" href="#">
                            <img src="{{ asset('bundles/amicaleaccueil/images/supprimer.jpeg') }}" alt="supprimer" />
                        </a>
                    </td>
                </tr>
            {% endfor %}        
        </tbody>
    </table>
</div>  
